            <form action="/movies/<%= m._id %>" method="get">
              <button type="submit" class="btn btn-info">View</button>
            </form>

          </div>
        </div>
      </div>
       
        <% } %> 

      


      </div>
    </div>

    <div class="row">
      <h1><span style="color:rgb(200,170,30);">Top Online Streaming</span></h1>
