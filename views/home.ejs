  <div class="container-fluid">

    <div class="row">
      <h1><span style="color:rgb(200,170,30);">Trending Movies</span></h1>
      <div class="owl-carousel owl-theme">

        <% for(let m of data){ %> 
          
          <div class="col  ">
      <div class=" col-4 card m-3" style="width: 18rem;">
          <img class="card-img-top" src="<%= m.Poster %> " alt="Card image cap">
          <div class="card-body">
          
            <h5 class="card-title"><%= m.Title %> </h5>
            
            <form action="/movies/<%= m._id %>" method="get">
              <button type="submit" class="btn btn-info">View</button>
            </form>
          </div>
        </div>
      </div>
     
        <% } %> 


      </div>
    </div>
    <div class="row">
      <h1><span style="color:rgb(200,170,30);">Recommended Movies</span></h1>
